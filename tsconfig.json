{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/", "*.js" /*js files in the project root*/]
}
